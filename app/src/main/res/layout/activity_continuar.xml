<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Continuar"
        android:background="@drawable/login">

    <ImageView
            android:layout_width="285dp"
            android:layout_height="409dp" app:srcCompat="@drawable/perfil"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="90dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/Bcontinua"/>
    <Button
            android:text="@string/continuar"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/Bcontinua"
            android:textColor="@color/Blanco"
            android:background="@color/colorPrimaryDark"
            style="@android:style/Widget.DeviceDefault.Button.Borderless" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="177dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="231dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>